<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <com.main.oneplusonegame.customclasses.ScrollingTextView
        android:id="@+id/qa_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="28"
        android:gravity="center"
        android:text="ScrollingTextView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="96" >

        <ImageView
            android:id="@+id/qa_list_item_seperator"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/list_separator" />
    </LinearLayout>

    <TextView
        android:id="@+id/qa_list_item_arrow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="70"
        android:gravity="center"
        android:text="@string/right_arrow" />

</LinearLayout>